<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:alpha="0.8"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_cardview"
            android:textColor="@color/black"
            android:text="Sagar Pawar"
            android:id="@+id/txtCollegeName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:text="Shri Ramdeobaba College of Engineering and Management"
            app:layout_constraintBottom_toBottomOf="@+id/txtCollegeName"
            android:id="@+id/txtBranchName"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science and Engineering"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtBranchName"
                android:id="@+id/textView3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nagpur"
                android:drawablePadding="4dp"
                android:drawableTint="@color/grey300"
                android:paddingStart="8dp"
                android:alpha="0.8"
                android:paddingEnd="8dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/round_location_city_white_24"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="8dp"
                android:id="@+id/txtCity"/>

        <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/red"
                android:alpha="0.8"
                android:src="@drawable/round_favorite_white_24"
                app:layout_constraintTop_toTopOf="@+id/txtLikes"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/txtLikes"
                app:layout_constraintBottom_toBottomOf="@+id/txtLikes"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/red"
                android:text="62"
                android:alpha="0.8"
                android:drawablePadding="2dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:id="@+id/txtLikes"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:text="Cutoff Mark: 180"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp"
                android:alpha="0.8"
                android:paddingStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtCity"
                android:id="@+id/txtCutoffMark"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cutoff Rank: 11800"
                app:layout_constraintTop_toBottomOf="@+id/txtCity"
                android:layout_marginEnd="8dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp"
                android:alpha="0.8"
                android:paddingStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/txtCutoffRank"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txtCutoffMark"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp"
                android:alpha="0.8"
                android:paddingStart="8dp"
                android:id="@+id/txtQuota"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Quota: GOPENO"/>

        <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:paddingTop="0dp"
                android:tint="@color/grey"
                android:src="@drawable/ic_help_outline_black_24dp"
                app:layout_constraintStart_toEndOf="@+id/txtQuota"
                app:layout_constraintTop_toTopOf="@+id/txtQuota"
                app:layout_constraintBottom_toBottomOf="@+id/txtQuota"/>

    </android.support.constraint.ConstraintLayout>

</merge>